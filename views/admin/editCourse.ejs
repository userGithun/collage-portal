<%- include('./header.ejs') %>
    <%- include('./sidebar.ejs')%>


        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">

                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0 text-dark">Course Edit</h1>
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                                <li class="breadcrumb-item active">Course</li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->


                <div class="container-fluid">

                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">DataTable with default features</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <form action="/admin/update_Course/<%= c.id %>" method="post">
                                    <div class="mb-3">
                                        <label for="">Name</label>
                                        <input type="text" value="<%= c.name %>" name="name" class="form-control">
                                    </div>
                                    <div class="mb-3">
                                        <label for="">Email</label>
                                        <input type="text" value="<%= c.email %>" name="email" class="form-control">
                                    </div>
                                    <div class="mb-3">
                                        <label for="">Phone no.</label>
                                        <input type="number" name="phone" value="<%= c.phone %>" class="form-control">
                                    </div>
                                    <div class="mb-3">
                                        <label for="">DOB</label>
                                        <input type="date" name="dob" value="<%= c.dob %>" class="form-control">
                                    </div>
                                    <div class="mb-3">
                                        <label for="">Address</label>
                                        <textarea name="address" class="form-control"><%= c.address %></textarea>
                                    </div>
                                    <div class="mb-3">
                                        <label for="">Gender</label>
                                        <input type="radio" name="gender" value="male"<%= c.gender =='male'?'checked':'' %>>Male
                                        <input type="radio" name="gender" value="female"<%= c.gender =='female'?'checked':'' %>>Female
                                    </div>
                                    <div class="mb-3">
                                        <label for="">Education</label>
                                        <select name="education" class="form-control form-select">
                                            <option value="">select education</option>
                                            <option value="10"<%= c.education =='10'?'selected':'' %>>10th</option>
                                            <option value="12"<%= c.education =='12'?'selected':'' %>>12th</option>
                        
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <label for="">Course</label>
                                        <input type="text" value="<%= c.course %>" readonly class="form-control" name="course">
                                    </div>
                                    <button type="submit" class="btn btn-success">Update</button>
                        
                                </form>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div><!-- /.container -->
            </div>
            <!-- /.content-header -->


        </div>
        <!-- /.content-wrapper -->




        <%- include('./footer.ejs') %>